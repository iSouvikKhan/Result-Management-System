
<% layout('layouts/boilerplate') %>

<div>
      <!-- Header -->
      <nav class="navbar-expand header p-1">
          <a href="/home" type="button" class="btn colour radius float-end"><strong>Logout</strong></a>
        <header><h2>Result Management System</h2></header>
      </nav>

      <!-- Main -->
      <main>
        <div class="container-fluid">
          <div class="row">
              <div class="col-12 height">
                <br/>
                <a href="/students/new" class="btn size btn-primary radius click float-end">Add Record</a><br/>
                <h4 class="mt-4">Total !!! Students</h4>

                <!-- Table Start -->

                <table class="table table-bordered mt-4" style="border-color:black;">
                <thead class="thread-dark text-center">
                  <tr>
                    <th scope="col" class="col-3">Roll No.</th>
                    <th scope="col" class="col-3">Name</th>
                    <th scope="col" class="col-2">Date Of Birth</th>
                    <th scope="col" class="col-2">Score</th>
                    <th scope="col" class="col-2">Action</th>
                  </tr>
                </thead>
                <tbody>

                  <% for (let student of students) { %>

                    <tr class="text-center">
                        <!-- <th scope="row">1</th> -->
                        <td><%= student.RollNumber%></td>
                        <td><%= student.Name%></td>
                        <td><%= student.Dob%></td>
                        <td><%= student.Score%></td>
                        <td class="text-center">

                            <a href="/students/<%=student.RollNumber%>/edit" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
                            
                            <form style="display: inline;" action="/<%=student.RollNumber%>?_method=DELETE" method="post">
                              <button class="btn" type="submit"><i class="bi bi-trash"> Delete</i></button>
                            </form>

                        </td>
                    </tr>

                  <%}%>

                </tbody>
              </table>

                <!-- Table End -->

              </div>
            </div>
        </div>
      </main>

      <!-- Footer -->
      <div class="row">
        <footer class="footer fixed-bottom p-1 Copyright">Copyright &copy; Result Management System <span id="currentYear"></span></footer>      </div>
      </div>

    <script>
      var date = new Date();
      var year = date.getFullYear();
      document.getElementById("currentYear").innerHTML = year;
    </script>